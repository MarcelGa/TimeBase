{
  "ConnectionStrings": {
    "TimeBaseDb": "Host=localhost;Database=timebase;Username=timebase;Password=timebase_dev"
  },

  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "TimeBase": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}  {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId"],
    "Properties": {
      "Application": "TimeBase.Core"
    }
  },

  "OpenTelemetry": {
    "ServiceName": "TimeBase.Core",
    "ServiceVersion": "1.0.0",
    "Tracing": {
      "Enabled": true,
      "ConsoleExporter": true,
      "OtlpExporter": false,
      "OtlpEndpoint": "http://localhost:4317"
    },
    "Metrics": {
      "Enabled": true,
      "ConsoleExporter": true,
      "OtlpExporter": false,
      "OtlpEndpoint": "http://localhost:4317"
    }
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8080"
      },
      "gRPC": {
        "Url": "http://localhost:50051",
        "Protocols": "Http2"
      }
    }
  },

  "Providers": {
    "RegistryPath": "/data/providers",
    "HealthCheckInterval": "00:01:00",
    "DefaultTimeout": "00:00:30"
  },

  "Grpc": {
    "MaxConcurrentStreams": 100,
    "MaxMessageSize": 1048576,
    "KeepAliveTime": "00:10:00",
    "KeepAliveTimeout": "00:00:30"
  },

  "AllowedHosts": "*"
}
